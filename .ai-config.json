{
  "framework": {
    "name": "Wheels",
    "version": "2.6.0",
    "description": "A Ruby on Rails inspired web framework for CFML",
    "documentation": {
      "primary": "CLAUDE.md",
      "patterns": "AI-PATTERNS.md",
      "troubleshooting": "AI-TROUBLESHOOTING.md",
      "examples": "AI-EXAMPLES.md",
      "context": "AI-CONTEXT.md",
      "testing": "AI-TESTING.md",
      "errors": "AI-ERRORS.md",
      "cli": "AI-CLI.md"
    }
  },
  "conventions": {
    "fileNaming": {
      "controllers": "PascalCase.cfc (e.g., Users.cfc)",
      "models": "Singular PascalCase.cfc (e.g., User.cfc)",
      "views": "lowercase.cfm (e.g., index.cfm, show.cfm)",
      "layouts": "lowercase.cfm (e.g., default.cfm)",
      "partials": "_lowercase.cfm (e.g., _form.cfm)"
    },
    "codeStyle": {
      "variables": "camelCase",
      "functions": "camelCase",
      "cfcs": "PascalCase",
      "scopedVariables": "lowercase.camelCase (e.g., application.myVar)",
      "builtInFunctions": "PascalCase (e.g., IsNumeric(), Trim())",
      "privateFrameworkMethods": "$prefixed (e.g., $query())"
    },
    "initialization": {
      "controllers": "Use config() method, NOT init()",
      "models": "Use config() method, NOT init()"
    }
  },
  "commonPatterns": {
    "controller": {
      "restful": ["index", "show", "new", "create", "edit", "update", "delete"],
      "filters": ["beforeFilter", "afterFilter", "aroundFilter"],
      "contentNegotiation": ["provides", "onlyProvides", "renderWith"]
    },
    "model": {
      "associations": ["hasMany", "belongsTo", "hasOne"],
      "validations": ["validates", "validatesPresenceOf", "validatesUniquenessOf"],
      "callbacks": ["beforeValidation", "afterValidation", "beforeSave", "afterSave", "beforeCreate", "afterCreate"]
    },
    "routing": {
      "resources": "mapper.resources()",
      "namespace": "mapper.namespace()",
      "scopes": "mapper.scope()",
      "customRoutes": "mapper.get(), mapper.post(), mapper.put(), mapper.delete()"
    }
  },
  "testingPatterns": {
    "framework": "TestBox",
    "syntax": "BDD (describe/it blocks)",
    "baseClass": "tests.BaseSpec",
    "factories": "Use factories for test data generation",
    "transactions": "Tests run in automatic rollback transactions",
    "commands": {
      "single": "wheels test app TestName",
      "package": "wheels test app testBundles=controllers",
      "all": "box testbox run",
      "watch": "box testbox watch"
    }
  },
  "commonTasks": {
    "generateController": "wheels g controller [name] [actions]",
    "generateModel": "wheels g model [name] [properties]",
    "generateScaffold": "wheels g scaffold [name] [properties]",
    "generateMigration": "wheels g migration [name]",
    "runMigrations": "wheels db migrate",
    "rollbackMigration": "wheels db rollback",
    "reloadApp": "wheels reload [environment]"
  },
  "databases": {
    "supported": ["H2", "MySQL", "PostgreSQL", "SQL Server", "Oracle"],
    "testDatabase": "wheelstestdb",
    "datasourceSwitching": "Use db={{database}} URL parameter",
    "migrations": "Use Migrator.cfc for schema management"
  },
  "environments": {
    "development": "Default environment",
    "testing": "For running tests",
    "maintenance": "Maintenance mode",
    "production": "Production environment"
  },
  "security": {
    "csrfProtection": "Built-in CSRF protection",
    "parameterFiltering": "Automatic parameter filtering",
    "sqlInjection": "Parameterized queries by default",
    "xssProtection": "Automatic HTML encoding in views"
  },
  "aiAssistance": {
    "preferredActions": [
      "Use existing patterns from codebase",
      "Follow framework conventions strictly",
      "Test with multiple CFML engines",
      "Use BaseSpec for all tests",
      "Run format:check before committing"
    ],
    "avoidActions": [
      "Creating files unless necessary",
      "Using init() for initialization",
      "Direct CFM file access",
      "Calling $prefixed methods from app code",
      "Mixing positional and named CLI parameters"
    ]
  }
}