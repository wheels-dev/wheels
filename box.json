{
    "name":"Wheels Framework Monorepo",
    "version":"3.0.0-SNAPSHOT",
    "author":"Wheels Core Team and Community",
    "shortDescription":"Wheels MVC Framework - Complete Development Suite",
    "location":"ForgeboxStorage",
    "slug":"wheels-monorepo",
    "homepage":"https://wheels.dev/",
    "documentation":"https://docs.wheels.dev/",
    "changelog":"https://github.com/wheels-dev/wheels/blob/master/CHANGELOG.md",
    "bugs":"https://github.com/wheels-dev/wheels/issues",
    "repository":{
        "type":"git",
        "URL":"https://github.com/wheels-dev/wheels"
    },
    "keywords":[
        "mvc",
        "rails",
        "wheels",
        "framework",
        "cli",
        "monorepo"
    ],
    "workspaces":[
        "core",
        "cli",
        "templates/*"
    ],
    "installPaths":{
        "wirebox":"vendor/wirebox/",
        "testbox":"vendor/testbox/"
    },
    "devDependencies":{
        "commandbox-dotenv":"*",
        "commandbox-cfconfig":"*",
        "commandbox-cfformat":"*"
    },
    "dependencies":{
        "wirebox":"^7",
        "testbox":"^5"
    },
    "type":"mvc",
    "private":false,
    "license":[
        {
            "type":"Apache License 2.0",
            "URL":"https://github.com/wheels-dev/wheels/blob/master/LICENSE"
        }
    ],
    "scripts":{
        "onServerInstall":"cfpm install image,mail,zip,debugger,caching,mysql,postgresql,sqlserver",
        "format":"cfformat run --overwrite",
        "format:watch":"cfformat watch ./.cfformat.json",
        "format:check":"cfformat check",
        "test":"testbox run",
        "test:watch":"testbox watch",
        "test:all":"box run-script test:core && box run-script test:cli",
        "test:core":"cd core && testbox run",
        "test:cli":"cd cli && testbox run",
        "test:coverage":"testbox run --coverage --coverageReporter=html",
        "build:all":"box run-script build:core && box run-script build:cli",
        "build:core":"cd tools/scripts && ./build-core.sh",
        "build:cli":"cd tools/scripts && ./build-cli.sh",
        "publish:all":"cd tools/scripts && ./publish-to-forgebox.sh"
    }
}
